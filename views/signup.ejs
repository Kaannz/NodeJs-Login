		<script
		  	src="https://code.jquery.com/jquery-3.3.1.min.js"
		  	integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
		  	crossorigin="anonymous">
		</script>
		<script src="javascript/jquery-3.3.1.min.js"></script>
		<script type="text/javascript">
			$(document).ready(function(){
				var user, pass;
				$("#signup").click(function() {
					user = $("#email1").val();
					pass = $("#pass1").val();
					cfpass = $("#cfpass1").val();
					console.log(user + " " + pass + " " + cfpass);
					if (user === '' || pass === '' || cfpass === '')
					{
						alert("Email hoặc password không được để trống");
					}
					else if (pass === cfpass)
					{
						$.post("http://localhost:9999/signup", {user : user, password: pass}, function(data){
							if (data ==="yes")
							{
								alert("Đăng ký thành công");
								$("input").val(''); 
							}
							else if (data === "already")
							{
								alert("Tài khoản đã được sử dụng vui lòng đặt tài khoản khác");
								$("input").val(''); 
							}
						});
					}
					else alert("Mật khẩu xác nhận không đúng");
				});
			});
		</script>
		<script type="text/javascript">
        </script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
